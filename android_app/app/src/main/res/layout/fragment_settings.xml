<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screenlayout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/toplayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:id="@+id/cards">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView6" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_bg_ripple"
                        android:layout_marginLeft="@dimen/card_margin_leftright"
                        android:layout_marginRight="@dimen/card_margin_leftright"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card1"
                        android:layout_marginTop="10dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/languagelayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true"
                                    android:padding="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/language"
                                        android:id="@+id/textView2"
                                        android:textColor="#000000" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text=""
                                        android:id="@+id/language_summary"
                                        android:layout_below="@+id/textView2"
                                        android:textColor="#000000" />
                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:id="@+id/keepscreenonlayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/keepscreenon"
                                        android:id="@+id/textView7s"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/centerswitch" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:id="@+id/csafsaf"
                                        android:textColor="#000000"
                                        android:layout_below="@+id/textView7s"
                                        android:text="@string/keepscreenondescription"
                                        android:layout_toLeftOf="@+id/centerswitch" />

                                    <android.support.v7.widget.SwitchCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/centerswitch"
                                        android:theme="@style/Custom_switchcompat_dark"
                                        android:textOff=" "
                                        android:textOn=" "
                                        android:checked="false"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_centerVertical="true" />

                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/appfontsizelayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true"
                                    android:padding="15dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/appfontsize"
                                        android:id="@+id/textView9"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/appfontsizetxt" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="@string/appfontsizedescription"
                                        android:id="@+id/textView10"
                                        android:layout_below="@+id/textView9"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/appfontsizetxt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text=""
                                        android:id="@+id/appfontsizetxt"
                                        android:textColor="#525252"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp" />
                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"
                                    android:id="@+id/hjhg" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/widgetfontsizelayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true"
                                    android:padding="15dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/widgetfontsize"
                                        android:id="@+id/textView11"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/widgetfontsizetxt" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="@string/widgetfontsizedescription"
                                        android:id="@+id/textView12"
                                        android:layout_below="@+id/textView11"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/widgetfontsizetxt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text=""
                                        android:id="@+id/widgetfontsizetxt"
                                        android:textColor="#525252"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp" />
                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"
                                    android:id="@+id/hjhgs" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lockscreenwidgetfontsizelayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true"
                                    android:padding="15dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/lockscreenwidgetfontsize"
                                        android:id="@+id/textView1s1"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/lockscreenwidgetfontsizetxt" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="@string/lockscreenwidgetfontsizesum"
                                        android:id="@+id/textView1s2"
                                        android:layout_below="@+id/textView1s1"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/lockscreenwidgetfontsizetxt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text=""
                                        android:id="@+id/lockscreenwidgetfontsizetxt"
                                        android:textColor="#525252"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp" />
                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"
                                    android:id="@+id/lockscreenfontsizedivider" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:id="@+id/centerwidgetlayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/centerwidgettext"
                                        android:id="@+id/textView7sssda"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/centerwidgetswitch" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:id="@+id/csafsafsa"
                                        android:textColor="#000000"
                                        android:layout_below="@+id/textView7sssda"
                                        android:text="@string/setwidgetlayout"
                                        android:layout_toLeftOf="@+id/centerwidgetswitch" />

                                    <android.support.v7.widget.SwitchCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/centerwidgetswitch"
                                        android:theme="@style/Custom_switchcompat_dark"
                                        android:textOff=" "
                                        android:textOn=" "
                                        android:checked="false"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_centerVertical="true" />

                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:id="@+id/imagebackgroundlayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/imagebackground"
                                        android:id="@+id/textView7ssda"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/imagebackgroundswitch" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:id="@+id/csafsafa"
                                        android:textColor="#000000"
                                        android:layout_below="@+id/textView7ssda"
                                        android:text="@string/imagebackgrounddescription"
                                        android:layout_toLeftOf="@+id/imagebackgroundswitch" />

                                    <android.support.v7.widget.SwitchCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imagebackgroundswitch"
                                        android:theme="@style/Custom_switchcompat_dark"
                                        android:textOff=" "
                                        android:textOn=" "
                                        android:checked="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_centerVertical="true" />

                                </RelativeLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"
                                    android:id="@+id/choosebackgroundcolordivider" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/choosebackgroundcolorlayout"
                                    android:background="@drawable/settingstap"
                                    android:clickable="true"
                                    android:visibility="visible"
                                    android:padding="15dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="@string/backgroundcolor"
                                        android:id="@+id/textView14"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/backgroundcolorindicator" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="@string/choosebackgroundcolor"
                                        android:id="@+id/textView15"
                                        android:layout_below="@+id/textView14"
                                        android:textColor="#000000"
                                        android:layout_toLeftOf="@+id/backgroundcolorindicator" />

                                    <ImageButton
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:id="@+id/backgroundcolorindicator"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/circle"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="5dp" />

                                </RelativeLayout>
                            </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_bg_ripple"
                        android:layout_marginLeft="@dimen/card_margin_leftright"
                        android:layout_marginRight="@dimen/card_margin_leftright"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/card2"
                        android:visibility="gone">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/aboutlayout"
                                android:background="@drawable/settingstap"
                                android:clickable="true"
                                android:padding="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/about"
                                    android:id="@+id/textView4"
                                    android:textColor="#000000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="@string/aboutdescription"
                                    android:id="@+id/textView7"
                                    android:layout_below="@+id/textView4"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/contactlayout"
                                android:background="@drawable/settingstap"
                                android:clickable="true"
                                android:padding="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/contact"
                                    android:id="@+id/textView8"
                                    android:textColor="#000000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="@string/contactdescription"
                                    android:id="@+id/textView13"
                                    android:layout_below="@+id/textView8"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/websitelayout"
                                android:background="@drawable/settingstap"
                                android:clickable="true"
                                android:padding="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="easeWave.com"
                                    android:id="@+id/textView17"
                                    android:textColor="#000000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="@string/checkoutwebsite"
                                    android:id="@+id/textView18"
                                    android:layout_below="@+id/textView17"
                                    android:textColor="#000000" />
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/actionbarShadow"
        android:background="@drawable/card_shadow"
        android:layout_alignParentTop="true">
    </FrameLayout>

</RelativeLayout>